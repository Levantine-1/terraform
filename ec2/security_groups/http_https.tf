resource "aws_security_group" "sg_http" {
  name        = "http_https"
  description = "HTTP Traffic on Port 80 and HTTPS Traffic on Port 443"

  ingress {
    from_port   = 80
    to_port     = 80
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

    ingress {
    from_port   = 443
    to_port     = 443
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }
}